<Window x:Class="DatabaseController.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseController"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Button x:Name="btLogin" Content="Login" HorizontalAlignment="Left" Margin="144,175,0,0" VerticalAlignment="Top" Width="75" Click="btLogin_Click"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Height="23" Margin="122,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="pbPass" HorizontalAlignment="Left" Margin="122,115,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Height="30" Width="65"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Height="30" Width="65"/>
        <Button x:Name="btRegister" Content="Register" HorizontalAlignment="Left" Margin="144,208,0,0" VerticalAlignment="Top" Width="75" Click="btRegister_Click"/>

    </Grid>
</Window>
