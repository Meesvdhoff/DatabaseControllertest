<Window x:Class="DatabaseController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseController"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btViewdb" Content="View Databases" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="112" Height="29" Click="btViewdb_Click"/>
        <Button x:Name="btCreatedb" Content="Create Database" HorizontalAlignment="Left" Margin="267,10,0,0" VerticalAlignment="Top" Width="112" Height="29" Click="btCreatedb_Click"/>
        <Button x:Name="btDeletedb" Content="Delete Database" HorizontalAlignment="Left" Margin="267,59,0,0" VerticalAlignment="Top" Width="112" Height="29"/>
        <ListBox x:Name="lbDatabases" HorizontalAlignment="Left" Height="231" Margin="10,59,0,0" VerticalAlignment="Top" Width="112"/>

    </Grid>
</Window>
